@model RegisterViewModel
<div class="container">
    <form method="post">
        <div style="text-align:center">
            <h2>Регистрация</h2>
        </div>
        <div class=" text-danger font-weigth-bolt" asp-validation-summary="ModelOnly"></div>

        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

        <div class="row justify-content-md-center">
            <div class="col-3">
                <label asp-for="Email"></label>
                <input class="form-control col-xs-3" type="text" placeholder="Электронная почта" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="row justify-content-md-center">
            <div class="col-3">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" placeholder="Пароль от 5 до 25 знаков">
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-3">
                <label asp-for="ConfirmPassword"></label>
                <input class="form-control" asp-for="ConfirmPassword" placeholder="Подтвердить пароль">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-3">
                <br><button type="submit" class="form-control btn btn-secondary" asp-area=""
                            asp-controller="Account"
                            asp-action="Register"
                            asp-route-ReturnUrl="@Model.ReturnUrl">
                    Зарегистрироваться
                </button>
            </div>
        </div>
    </form>
</div>

