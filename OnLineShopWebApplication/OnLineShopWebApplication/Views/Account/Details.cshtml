@model UserDeliveryDataViewModel

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-2">
                @await Html.PartialAsync("UserMenu")
            </div>
            <div class="col-10">
                <h2>Данные для доставки</h2>
                <table class="table">
                    <tr>
                        <td>@Model.Email</td>
                        <td>@Model.Phone</td>
                        <td>@Model.Address</td>
                    </tr>
                </table>


                <div>
                    <a class="btn btn-outline-info border-1" asp-area="" asp-controller="Account" asp-action="Edit" asp-route-userEmail="@Model.Email">Изменить данные</a>
                </div>
                <div>
                    <a class="btn btn-outline-info border-1" asp-area="" asp-controller="Account" asp-action="ChangePassword" asp-route-userEmail="@Model.Email">Смена пароля</a>
                </div>
            </div>
        </div>
    </div>
</form>
