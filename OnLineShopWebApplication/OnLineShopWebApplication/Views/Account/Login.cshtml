@model LoginViewModel

<form method="post">

    <div style="text-align:center">
        <h2>Вход</h2>
    </div>

    <div class="text-danger font-weigth-bolt" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

    <div class="row justify-content-md-center">
        <div class="col-3">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" placeholder="Электронная почта">
            <span asp-validation-for="Email"></span>
        </div>

    </div>
    <div class="row justify-content-md-center">
        <div class="col-3">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" placeholder="Пароль">
            <span asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-3">
            <div class="form-check">
                <br><input class="form-check-input" type="checkbox" name="rememberMe" value="true">Запомнить меня
            </div>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-3">
            <button type="submit" class="form-control btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Login">Войти</button>
            <a class="btn btn-outline-secondary border-1 m-3" asp-area="" asp-controller="Account" asp-action="Register">Регистрация нового пользователя</a>
        </div>
    </div>
</form>


