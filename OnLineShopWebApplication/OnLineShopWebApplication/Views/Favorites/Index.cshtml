@model List<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

@if (Model == null)
{
    <h5>У вас нет избранных товаров</h5>
}
else
{
    <h5>Избранное</h5>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-3 card shadow">
                <div class="card-body">
                    <div class="text-center">
                        <img class="pi" width="80" src=@product.ImagePath alt="Обложка книги"></img>
                    </div>
                    <a class="nav-link" asp-area="" asp-controller="Product" asp-action="index" asp-route-productId="@product.Id"><h5> @product.Name</h5></a>
                    <h5>@product.Cost руб.</h5>
                    <br><a class="btn btn-outline-secondary border-1" asp-area="" asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" role="button">Добавить в корзину</a>
                    <br><a class="nav-link" asp-area="" asp-controller="Favorites" asp-action="Remove" asp-route-productId="@product.Id" role="button">Удалить из избранного</a>
                </div>
            </div>
        }
    </div>
}
