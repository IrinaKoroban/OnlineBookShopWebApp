@model List<UserDeliveryDataViewModel>

<div class="container">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenu")
        </div>


        <div class="col-10">
            <h4>Список пользователей</h4>
            <a class="btn btn-outline-secondary border-1" asp-area="Admin" asp-controller="User" asp-action="Add" role="button">Добавить пользователя</a>
            <table class="table">
                <thread>
                    <tr>
                        <th>№</th>
                        <th>Email (логин)</th>
                        <th>ФИО</th>
                        <th>Телефон</th>
                        <th></th>
                    </tr>
                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model[i].Email</td>
                                <td>@Model[i].Name</td>
                                <td>@Model[i].Phone</td>
                                <td><a class="btn btn-outline-info border-1" asp-area="Admin" asp-controller="User" asp-action="Detail" asp-route-email="@Model[i].Email" role="button">Подробнее</a></td>
                            </tr>
                        }
                    </tbody>
                </thread>
            </table>
        </div>
    </div>
</div>
