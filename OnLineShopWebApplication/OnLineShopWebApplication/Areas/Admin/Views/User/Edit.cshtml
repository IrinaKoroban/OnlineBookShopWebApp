@model UserViewModel

<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("AdminMenu")
    </div>

    <div class="col-8">
        <form method="post">
            <div class="row justify-content-lg-start">
                <div class="col">
                    <br><h3>Редактирование</h3>

                    <div class="text-danger font-weigth-bolt" asp-validation-summary="ModelOnly"></div>
                    <input type="hidden" name="email" value="@Model?.Email">

                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Name"></label>
                            <input class="form-control col-xs-3" type="text" placeholder="ФИО" asp-for="Name">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-4">
                            <label asp-for="Phone"></label>
                            <input class="form-control col-xs-3" type="text" placeholder="Телефон" asp-for="Phone">
                            <span asp-validation-for="Phone"></span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button class="btn btn-outline-success" type="submit" asp-area="Admin" asp-controller="User" asp-action="Edit">
                            Изменить данные
                        </button>
                        <button class="btn-outline-secondary btn" asp-area="Admin" asp-controller="User" asp-action="Index">Назад</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


