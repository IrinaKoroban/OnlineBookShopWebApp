@model ProductViewModel

<div class="row">
    <div class="col-2">
        @await Html.PartialAsync("AdminMenu")
    </div>

    <div class="col-3">
        @if (Model.IsDeleted)
        {
            <h1 class="text-danger m-3">Удален</h1>
        }
        <img src=@Model.ImagePath class="card-img-top" style=" width: 100%; height: 25rem; object-fit: contain" alt="Обложка книги">
        @for (var i = 1; i < Model.Images.Length; i++)
        {
            <img class="col-6 mx-auto d-block my-2" src="@Model.Images[i]" alt="Изображение товара">
        }
    </div>
    <div class="col-5">
        <div class="card-body">
            <h6 class="card-title"><a class="nav-link text-secondary">@Model.Author</a></h6>
            <h5 class="card-title">@Model.Name</h5>
            <h5 class="card-title">@Model.Cost ₽.</h5>
            <p class="card-text">@Model.Description</p>
            <p class="card-text text-muted">ISBN: @Model.ISBN</p>
            <p class="card-text text-muted">Издательство: @Model.PublishingHouse</p>
            <p class="card-text text-muted">Год издания: @Model.YearRelease</p>

            <a class="btn btn-outline-secondary border-1" asp-area="Admin" asp-controller="Product" asp-action="Index" role="button">Вернуться назад</a>
            <a class="btn btn-outline-info border-1" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-productId="@Model.Id" role="button">Редактировать</a></td>
            @if (Model.IsDeleted)
            {
                <a class="btn btn-outline-warning border-1" asp-area="Admin" asp-controller="Product" asp-action="Restore" asp-route-productId="@Model.Id" role="button">Восстановить</a>
            }
            else
            {
                <!-- Кнопка-триггер модального окна -->
                <button type="button" class="btn btn-outline-warning border-1" data-bs-toggle="modal" data-bs-target="#Modal">
                    Удалить
                </button>

                <!-- Модальное окно -->
                <div class="modal fade" id="Modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Удаление</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                            </div>
                            <div class="modal-body">
                                Вы уверены, что хотите удалить продукт?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-secondary border-1" data-bs-dismiss="modal">Закрыть</button>
                                <a class="btn btn-outline-warning border-1" asp-area="Admin" asp-controller="Product" asp-action="Remove" asp-route-productId="@Model.Id" role="button">Удалить</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>