@model List<ProductViewModel>

<div class="container">
	<div class="row">
		<div class="col-2">
			@await Html.PartialAsync("AdminMenu")
		</div>

		<div class="col-10">
			<h4>Список продуктов</h4>
			<a class="btn btn-outline-secondary border-1" asp-area="Admin" asp-controller="Product" asp-action="Add" role="button">Добавить книгу</a>
			<table class="table">
				<thread>
					<tr>
						<th>№</th>
						<th>Автор</th>
						<th colspan="2">Название</th>
						<th>Цена, ₽</th>
						<th colspan="4"></th>
					</tr>
					<tbody>
						@for (int i = 0; i < Model.Count; i++)
						{
							<tr>
								<td>@(i + 1)</td>
								<td>@Model[i].Author</td>
								<td>
									<a class="link-dark" asp-area="Admin" asp-controller="Product" asp-action="Detail" asp-route-productId="@Model[i].Id">
										<img src="@Model[i].ImagePath" class="img" style=" width: 100%; height: 3rem; object-fit: contain;" alt="Обложка">
									</a>

								</td>
								<td>
									<a class="link-dark" asp-area="Admin" asp-controller="Product" asp-action="Detail" asp-route-productId="@Model[i].Id">@Model[i].Name</a>
								</td>
								<td>@Model[i].Cost</td>
								<td>
									<a class="btn btn-outline-info border-1" asp-area="Admin" asp-controller="Product" asp-action="Detail" asp-route-productId="@Model[i].Id" role="button">Просмотр</a>
								</td>
								<td>
									<a class="btn btn-outline-info border-1" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-productId="@Model[i].Id" role="button">Редактировать</a>
								</td>

								@if (Model[i].IsDeleted)
								{
									<td class="text-danger">Удален</td>
									<td><a class="btn btn-outline-success border-1" asp-area="Admin" asp-controller="Product" asp-action="Restore" asp-route-productId="@Model[i].Id" role="button">Восстановить</a></td>
								}
								else
								{
									<td class="text-success">В продаже</td>
									<td>
										<a class="btn btn-outline-warning border-1" asp-area="Admin" asp-controller="Product" asp-action="Remove" asp-route-productId="@Model[i].Id" role="button">Удалить</a>
									</td>
								}
							</tr>
						}
					</tbody>
				</thread>
			</table>
		</div>
	</div>
</div>
