@model List<RoleViewModel>

<div class="container">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenu")
        </div>
		<div class="col-10">
			<h4>Роли</h4>
			<a class="btn btn-outline-secondary border-1" asp-area="Admin" asp-controller="Role" asp-action="Add" role="button">Добавить роль</a>
			<table class="table">
				<thread>
					<tr>
						<th>Название</th>
						<th></th>
						<th></th>
					</tr>
					<tbody>
						@foreach(var role in Model)
						{
							<tr>
								<td>@role.Name</td>
								<!-- Кнопка-триггер модального окна -->
								<td>
									<button type="button" class="btn btn-outline-warning border-1" data-bs-toggle="modal" data-bs-target="#exampleModal">
										Удалить
									</button>
								</td>

								<!-- Модальное окно -->
								<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog">
										<div class="modal-content">
											<div class="modal-header">
												<h1 class="modal-title fs-5" id="exampleModalLabel">Удаление</h1>
												<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
											</div>
											<div class="modal-body">
												Вы уверены, что хотите удалить эту роль?
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-outline-secondary border-1" data-bs-dismiss="modal">Закрыть</button>
												<a class="btn btn-outline-warning border-1" asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-roleName="@role.Name" role="button">Удалить</a>
											</div>
										</div>
									</div>
								</div>
							</tr>
						}
					</tbody>
				</thread>
			</table>
		</div>
    </div>
</div>